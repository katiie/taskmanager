<nav class="level">
  <!-- Left side -->
  <div class="level-left">
    <div class="level-item ">
      <div class="field has-addons">
        <p class="control">
          <input class="input" type="text" placeholder="Find a task">
        </p>
        <p class="control">
          <button class="button">
            Search
          </button>
        </p>
      </div>
    </div>
  </div>
  <!-- Right side -->
  <div class="level-right">
    <p class="level-item"><%= link_to "New", new_task_path() ,class:"button is-success"%></p>
  </div>
</nav>
<div class="taskcontainer">
  <% @tasks.each do |task| %>
    <div class="card">
      <header class="card-header">
        <p class="card-header-title">
          <%= task.title %>
        </p>
        <a href="#" class="card-header-icon" aria-label="more options">
          <span class="icon">
            <i class="fas fa-angle-down" aria-hidden="true"></i>
          </span>
        </a>
      </header>
      <div class="card-content">
        <div class="content">
          <%= task.description.length > 27 ? task.description[0..27] + ".." : task.description %>
          <br>
          <br>
          <time datetime="2016-1-1"><span>Due<span> <%= task.duedate %></time>
            </div>
          </div>
          
          <footer class="card-footer">
            <%= link_to "Edit", edit_task_path(task.id) ,class:"card-footer-item is-success"%>
            <%= link_to "Delete", task, method: :delete, data: { confirm: "Really?" },class:"card-footer-item is-success" %>
          </footer>
        </div>
      <% end %>
    </div>
